<% form_for @form, :html => {:class => 'pretty_form'} do |form| %>
  <%= form.label :text, 'Name<span class="small">Enter a name for your form</span>' %>
  <%= form.text_field :name %>
  <div class="spacer"></div>
<% end %>

<script>
  $(function(){
    // focus on question
    $("#form_name").focus();
    // new question
    $('#dialog').dialog('option', 'title', 'New Form');
    $('#dialog').dialog('option', 'buttons', {
      "Save": function(){
        $("#dialog form").ajaxSubmit({
          success: function(data, status){
            $("#forms").append(data);
            $("#dialog").dialog('close');
          }
        });
      },
      "Cancel": function(){
        $("#dialog form").clearForm();
        $("#dialog").dialog('close');
      }
    });
  });
</script>